                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="T2"
                       Style="{StaticResource tTitle}"
                       Grid.Column="0"/>
                    <Label Content="T3"
                       Style="{StaticResource tTitle}"
                       Grid.Column="1"/>
                    <Label Content="T4"
                       Style="{StaticResource tTitle}"
                       Grid.Column="2"/>
                    <Label Content="T5"
                       Style="{StaticResource tTitle}"
                       Grid.Column="3"/>
                    <Label Content="T6"
                       Style="{StaticResource tTitle}"
                       Grid.Column="4"/>
                    <Label Content="T7"
                       Style="{StaticResource tTitle}"
                       Grid.Column="5"/>
                    <Label Content="CN"
                       Style="{StaticResource tTitle}"
                       Grid.Column="6"/>
                </Grid>
                <Grid x:Name="gCalender" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                </Grid>
            </StackPanel>

